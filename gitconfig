[user]
    name = Jaap Verloop
    email = j.verloop@gmail.com
    useConfigOnly = true
[github]
    user = jaapverloop
[core]
    editor = vim
    autocrlf = false
    safecrlf = false
    excludesfile = ~/.gitignore
    pager = diff | less --tabs=4 -RFX
[color]
    ui = true
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[color "diff"]
    meta = 11
    frag = magenta bold
    func = 146 bold
    commit = yellow bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22
[merge]
    tool = vimdiff
    conflictstyle = diff3
[mergetool]
    prompt = false
[alias]
    hist = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)%Creset' --color --graph --abbrev-commit --date=short
[push]
    default = current
[pull]
    default = current
    ff = only
[filter "lfs"]
    clean = git lfs clean %f
    smudge = git lfs smudge %f
    required = true
[url "git@github.com:"]
    insteadOf = gh:
[status]
    short = true
    branch = true
    showUntrackedFiles = all
